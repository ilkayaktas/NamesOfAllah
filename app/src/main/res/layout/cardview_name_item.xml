<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_rounded_button_selector"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_carditem_imageOfName"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_carditem_imageOfName"
        app:layout_constraintLeft_toRightOf="@+id/iv_carditem_imageOfName"
        app:layout_constraintTop_toTopOf="@+id/iv_carditem_imageOfName"
        app:layout_constraintVertical_bias="0.491">

        <TextView
            android:id="@+id/tv_carditem_nameOfAllah"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:maxLines="1"
            android:text="Allah"
            android:textColor="@color/mobss_color_black"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/tv_carditem_meaningOfName"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="left"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:text="A long description about my application"
            android:textColor="@color/md_grey_600"
            android:textSize="22sp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>