<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_card_imageOfName"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_card_imageOfName"
        app:layout_constraintLeft_toRightOf="@+id/imageview_card_imageOfName"
        app:layout_constraintTop_toTopOf="@+id/imageview_card_imageOfName"
        app:layout_constraintVertical_bias="0.491">

        <TextView
            android:id="@+id/textview_card_nameOfAllah"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="Allah"
            android:textColor="@color/mobss_color_black"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/textview_card_meaningOfName"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:maxLines="6"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:scrollbars="vertical"
            android:text="A long description about my application"
            android:textColor="@color/md_grey_600"
            android:textSize="22sp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>